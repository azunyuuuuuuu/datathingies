@page "/covid19"

@using datathingies.Data
@inject Covid19DataService _covid

<div class="markdown">


    <h1>Covid19 Data</h1>

    @if (rawdata == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <p>
            Worldwide Cases: @rawdata.Where(x=>x.Location == "World").OrderByDescending(x=>x.Date).First().TotalCases
        </p>

        <p>
            Recorded countries:
        <ul>
            @foreach (var entry in rawdata.Where(x => !string.IsNullOrWhiteSpace(x.Continent)).GroupBy(x => x.Location))
                {
                    <li>@entry.Key</li>
                }
        </ul>
        </p>

        <p>
            Data entries: @rawdata.Count()
        </p>
    }

</div>

@code {
    private Covid19DataEntry[] rawdata;

    protected override async Task OnInitializedAsync()
    {
        rawdata = await _covid.GetAllDataAsync();
    }
}
