@using Data
<tr>
    <td>@Data?.Week</td>

    <td>@Data?.Month</td>

    <HeatmapDataField Value=@(Data?.Monday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(0)) />
    <HeatmapDataField Value=@(Data?.Tuesday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(1)) />
    <HeatmapDataField Value=@(Data?.Wednesday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(2)) />
    <HeatmapDataField Value=@(Data?.Thursday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(3)) />
    <HeatmapDataField Value=@(Data?.Friday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(4)) />
    <HeatmapDataField Value=@(Data?.Saturday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(5))/>
    <HeatmapDataField Value=@(Data?.Sunday ?? 0) Date=@(Data.Date + TimeSpan.FromDays(6)) />

    <td class="text-right" data-color="">
        @Data?.Weekly?.ToString("#,##0")
    </td>
</tr>

@code {
    [Parameter]
    public Covid19WeeklyData Data { get; set; }

    [CascadingParameter]
    protected HeatmapMetadata _heatmapmetadata { get; set; }
}
