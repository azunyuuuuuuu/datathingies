@using Data
<tr>
    <td>@Data?.Week</td>

    <td>@Data?.Month</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorMonday" title="@(Data?.Date + TimeSpan.FromDays(0))">
        @Data?.Monday?.ToString("#,##0")</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorTuesday" title="@(Data?.Date + TimeSpan.FromDays(1))">
        @Data?.Tuesday?.ToString("#,##0")</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorWednesday" title="@(Data?.Date + TimeSpan.FromDays(2))">
        @Data?.Wednesday?.ToString("#,##0")</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorThursday" title="@(Data?.Date + TimeSpan.FromDays(3))">
        @Data?.Thursday?.ToString("#,##0")</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorFriday" title="@(Data?.Date + TimeSpan.FromDays(4))">
        @Data?.Friday?.ToString("#,##0")</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorSaturday" title="@(Data?.Date + TimeSpan.FromDays(5))">
        @Data?.Saturday?.ToString("#,##0")</td>

    <td class="text-right text-gray-800" style="background-color: @Data?.ColorSunday" title="@(Data?.Date + TimeSpan.FromDays(6))">
        @Data?.Sunday?.ToString("#,##0")</td>

    <td class="text-right" data-color="">
        @Data?.Weekly?.ToString("#,##0")
    </td>
</tr>

@code {
    [Parameter]
    public Covid19WeeklyData Data { get; set; }
}
