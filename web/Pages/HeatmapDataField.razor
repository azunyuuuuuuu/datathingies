@using Data
@using Humanizer

<td class="text-right @(Value > 0 ? "text-gray-800" : "text-gray-600" )"
    style="background-color: @_heatmapmetadata.GetColorAtAsHex(Value)" 
    title=@(Date.ToString("yyyy-MM-dd")) title:format="yyyy-MM-dd">

    <span class="hidden md:block">
        @Value?.ToString("#,##0")
    </span>

    <span class="block md:hidden">
        @Value?.ToMetric(decimals: 1)
    </span>

</td>

@code {
    [Parameter]
    public double? Value { get; set; }
    [Parameter]
    public DateTime Date { get; set; }

    [CascadingParameter]
    protected HeatmapMetadata _heatmapmetadata { get; set; }
}
